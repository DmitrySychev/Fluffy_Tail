

<div class="container2">
<h2>Location Details</h2>
<p>Name: <%= @location.name %></p>
<p>Address: <%= @location.address %></p>
<p>Phone: <%= @location.phone %></p><br>

<h2>Available Animals</h2>
<% @location.pets.each do |pet| %>
    <h3>Name: <%= pet.name %></h3>
    <p>Animal: <%= pet.animal_type %></p>
    <p>Breed: <%= pet.breed %></p>
    <p>Age: <%= pet.age %></p>
    <p><%= link_to "See #{pet.name}'s details", pet_path(pet.id) %></p> 
    <p><img src="<%= pet.img_url %>" alt="<%= pet.name%>" height= 60%, width= 60%></p>
    <% end %>
</div>



