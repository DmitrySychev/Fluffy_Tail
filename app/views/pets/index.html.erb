
<h1>All Available Pets</h1>

<%= form_tag pets_path, :method => 'get' do  %>

  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>

<% end %>


<%= link_to "List New Pet", new_pet_path %>
<br>
<% @pets.each do |pet| %>
    <p><%= link_to pet.name, pet_path(pet) %>, <%= pet.animal_type %> </p>
<% end %>