    <div class="wrapper">

    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
    <%= content_for?(:content) ? yield(:content) : yield %>
    </main>



<div class="pet-img">
<%= image_tag @pet.img_url, size: "492x328" %>
</div><br>

<div class="container2">
<p id="pet-name">Meet <%= @pet.name %></p>
<p>Animal Type: <%= @pet.animal_type %></p>
<p>Breed: <%= @pet.breed %></p>
<p>Age: <%= @pet.age %></p> 
</div>
<br>
<div class="container2">
<p><%= @pet.location.name %></p>
<p><%= @pet.location.address %></p>
<p><%= @pet.location.phone %></p>
</div>




