
<div class="pet-img">
<div id="carousel-pet-pics" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carousel-pet-pics" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-pet-pics" data-slide-to="1"></li>
    <li data-target="#carousel-pet-pics" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="<%= @pet.img_url%>" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="<%= @pet.img_url%>" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="<%= @pet.img_url%>" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carousel-pet-pics" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel-pet-pics" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

</div><br>

<div class="container2">
<p id="pet-name">Meet <%= @pet.name %></p>
<p>Animal Type: <%= @pet.animal_type %></p>
<p>Breed: <%= @pet.breed %></p>
<p>Age: <%= @pet.age %></p> 
</div>
<br>
<div class="container2">
<p><%= @pet.location.name %></p>
<p><%= @pet.location.address %></p>
<p><%= @pet.location.phone %></p>
</div><br>

<div class="container2">

  <% if @favorite_exists == false %>
    <%= form_for @favorite do |f| %>
      <%= f.hidden_field :pet_id, value: @pet.id %>
      <%= f.submit %>
    <% end %>

  <% else %>

    <%= button_to 'Remove Favorite', pet_path(@pet), method: :delete %>

  <% end %>

  <div>
     <% if @pet.favorites.count == 0 %>
      <%= "Be the first to favorite #{@pet.name}!" %>
      <% elsif @pet.favorites.count == 1%>
        <%= "Loved by #{@pet.favorites.count} Fluffy Tail user" %>
      <% else %>
        <%= "Loved by #{@pet.favorites.count} Fluffy Tail users" %>
      <% end %>
  </div>

</div>




