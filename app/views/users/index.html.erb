        <div class="carousel-item active">
            <img src="<%= asset_path 'bg2.jpeg' %>" class="d-block w-100">
        </div>
          <div class="carousel-item">
            <img src="<%= asset_path 'bg1.jpeg' %>" class="d-block w-100">
          </div>
            <div class="carousel-item">
              <img src="<%= asset_path 'bg3.jpeg' %>" class="d-block w-100">
            </div>
        </div>
    </div>


<% end %>




