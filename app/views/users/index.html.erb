
<% content_for :content do %>
  <div class="wrapper">

    <header>
      <%= render 'layouts/navigation' %>
    </header>

    <main role="main">
    <%= content_for?(:content) ? yield(:content) : yield %>

    </main>

    <div id="petSlides" class="carousel slide" data-ride="carousel">
